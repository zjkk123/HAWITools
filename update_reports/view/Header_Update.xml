<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data> 
<template id="header_update_logo" inherit_id="web.external_layout_standard">
   <xpath expr="t/div[0]/div[0]" position="replace">
        <div class="col-4 mb4 text-center">
            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 70px;" class="rounded" alt="Logo"/>
        </div>
        <div class="col-4 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
        <div class="col-4" />
   </xpath>
</template>
</data>                            
</odoo>