<?xml version="1.0"?>
<odoo>
    <template id="header_update_logo" inherit_id="web.external_layout_standard">
        <xpath expr="/t/div[0]/div[0]/div[0]" position="replace">
            <div class="col-4 mb4 text-center">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 70px;" class="rounded" alt="Logo"/>
            </div>
        </xpath>
    </template>
</odoo>
