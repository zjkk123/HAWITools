<?xml version="1.0"?>
<odoo>
    <template id="header_update_logo" inherit_id="l10n_gcc_invoice.external_layout_standard">
        <xpath expr="/t/div[1]/div[1]/div[1]" position="replace">
            <div class="col-3 mb4 text-center">
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 70px;" class="rounded" alt="Logo"/>
            </div>
        </xpath>

        <xpath expr="/t/div[1]/div[3]/div[2]" position="replace">
            <div class="col-1"/>
        </xpath>

        <xpath expr="/t/div[1]/div[3]/div[1]" position="replace">
            <div class="col-6" name="company_address">
                    <div t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    <p t-if="company.partner_id.vat">
                        <t t-out="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>:
                        <span t-field="company.partner_id.vat"/>
                    </p>
                </div>
        </xpath>

        <xpath expr="/t/div[1]/div[3]/div[3]" position="replace">
            <div class="col-7" name="company_address" dir="rtl" style="text-align:right">
        </xpath>
    </template>
</odoo>
